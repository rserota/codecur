doctype 5
html
    head
        title Archive
        link(rel="shortcut icon", href="../media/images/favicon.ico")
        link(rel='stylesheet', href='http://netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/myNavbar.css')
        link(rel='stylesheet', href='/stylesheets/archive.css')
    body
        .container
            .row
                include myNavbar
            -for (var i = 0; i < posts.length; i++){
                p
                    span.blogdate.pull-right #{posts[i].date.toDateString()}
                    h4.blogtitle <a href='/us/archive/#{posts[i].url}'>#{posts[i].title}</a>
                    hr
            -}